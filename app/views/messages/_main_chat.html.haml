.chat-main
  .main-header
    .main-header__left-box
      .main-header__left-box__current-group
        = @group.name
      .main-header__left-box__member-list
        .main-header__left-box__member-list__user
        Member :
        - @group.users.each do |user|
          .main-header__left-box__member-list__user__name
            = user.name 
    = link_to "Edit", edit_group_path(@group.id), class: "main-header__edit-btn"
  .messages
    = render @messages
    .message
      .message__upper-info
        .message__upper-info__talker
          tanaka
        .message__upper-info__date
          2019/11/27(Wed) 17:00:00
      .message__text
        test
    .messages__second
.form
  .form__input
    = form_for [@group, @message] do |f|
      .form__input__box
        = f.text_field :content, class: "form__input__box__message", placeholder: "type a message"
        = f.label :image, class: "form__input__box__image" do
          = icon("far", "image", class: "form__input__box__image__icon" )
          = f.file_field :image, class: "hidden"
        = f.submit 'Send', class: "form__input__box__submit-btn"